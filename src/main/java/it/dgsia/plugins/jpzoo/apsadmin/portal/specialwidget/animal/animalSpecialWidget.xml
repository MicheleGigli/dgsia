<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="jpzoo_do/jpzoo/Animal/Page/SpecialWidget" namespace="/do/Page/SpecialWidget" extends="core_do/Page/SpecialWidget">


    	<action name="miaAction" class="jacmsContentListViewerWidgetAction" method="init">
        	<result type="tiles">admin.jacms.page.widget.contentListViewer.config</result>
            <interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>

    </package>


	<package name="jpzoo_do/jpzoo/Animal/Page/SpecialWidget/jpzooAnimalConfig" namespace="/do/jpzoo/Animal/Page/SpecialWidget/jpzooAnimalConfig" extends="entando-default">

		<global-results>
    		<result name="pageTree" type="chain">
    			<param name="namespace">/do/Page</param>
    			<param name="actionName">viewTree</param>
    		</result>
    		<result name="configure" type="chain">
            	<param name="namespace">/do/Page</param>
    			<param name="actionName">configure</param>
            </result>
		</global-results>


		<action name="saveConfig" class="jpzooAnimalConfigAction" method="save">
    		<result type="tiles" name="input">jpzoo.admin.page.widget.Animal.entry</result>
        	<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">managePages</param></interceptor-ref>
        </action>

	</package>



</struts>